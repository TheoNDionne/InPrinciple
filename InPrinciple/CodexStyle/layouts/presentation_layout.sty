\usetheme{default}
\usefonttheme{serif}

%------------Box dimensions----------------

\setlength{\fboxrule}{1pt} % sets the border width globally (or locally in a group)
\setlength{\fboxsep}{4pt}  % sets padding between frame and content

%-----setup frames

\setbeamerfont{frametitle}{family=\sffamily, series=\bfseries}
\setbeamerfont{normal text}{family=\rmfamily}

\setbeamerfont{footline}{size=\small}

\setbeamercolor{frametitle}{fg=white, bg=MainColor}

% Remove ugly ahh navigation symbols
\beamertemplatenavigationsymbolsempty
% Frame number
\addtobeamertemplate{navigation symbols}{}{
    \usebeamerfont{footline}
    \usebeamercolor[MainColor]{footline}
    \hspace{2em}
    \insertframenumber/\inserttotalframenumber
}

\newcommand{\boxesnumberwithin}{section} % sets the counter for the boxes

\setbeamercolor{item}{fg=MainColor}

%------------URL setup---------------------
\colorlet{URLColor}{MainColor}
\colorlet{LinkColor}{black}
\colorlet{CiteColor}{MainColor}

% ------------
% TOC settings
% ------------
\setbeamercolor{section in toc}{fg=black}
\setbeamertemplate{section in toc}[square]
\setbeamercolor{section number projected}{bg=MainColor, fg=white} % setting the color for the section numbers within toc
\setbeamertemplate{subsection in toc}{%
\vspace{0.25em}\hspace{2em}{\color{MainColor}\raise0pt\hbox{\rule[0.5ex]{0.9ex}{0.6ex}\small\raise1.55pt\hbox{$\!{\blacktriangleright}$}~\inserttocsubsection}}\par}


%---------------Title settings-----------------
% title
\setbeamercolor{title}{fg=white, bg=MainColor}
\setbeamerfont{title}{family=\sffamily, series=\bfseries}

% subtitle
\setbeamercolor{subtitle}{fg=white, bg=MainColor}
\setbeamerfont{subtitle}{family=\rmfamily, series=\itshape, size=\small}


% itemize stuff
\defbeamertemplate{itemize item}{compoundarrow}{\raise0pt\hbox{\rule[0.5ex]{0.9ex}{0.6ex}\small\raise1.55pt\hbox{$\!{\blacktriangleright}$}}}
\setbeamertemplate{itemize item}[compoundarrow]
